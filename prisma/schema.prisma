generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ScheduleType {
  SCHEDULE_6x1
  SCHEDULE_5x2
  SCHEDULE_12x36
}

model Employee {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  birthDate DateTime @db.Date()
  status    Boolean  @default(true)
  createdAt DateTime @default(now()) @db.Timestamp()
  updatedAt DateTime @default(now()) @db.Timestamp()

  scheduleId Int
  schedule   Schedule         @relation(fields: [scheduleId], references: [id], onDelete: Restrict)
  skills     EmployeeSkills[]
}

model Schedule {
  id        Int          @id @default(autoincrement())
  startTime DateTime     @db.Time()
  endTime   DateTime     @db.Time()
  type      ScheduleType
  status    Boolean      @default(true)
  employees  Employee[]
}

model Skill {
  id          Int     @id @default(autoincrement())
  description String
  status      Boolean @default(true)

  employees EmployeeSkills[]
}

model EmployeeSkills {
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId String
  skill      Skill    @relation(fields: [skillId], references: [id], onDelete: Restrict)
  skillId    Int

  @@id([employeeId, skillId])
}
